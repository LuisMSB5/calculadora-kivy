#contenedor para la pantalla

<Contenedor>:

    background_color: 1,1,1,1
    orientation: 'vertical'

    TextInput:
        id: pantalla
        text: "0"
        readonly: True
        halign: 'right'
        valign: 'bottom'      # 'top', 'middle', 'bottom'
        size_hint: 1, 0.3
        padding: 30,30,30,30
        font_size: 30
        bold: True
        multiline: False
        


        #fondo azul y fuente blanca
        background_color: 0,0.1,0.2,1
        foreground_color: 1,1,1,1


    #contenedor para los botones

    GridLayout:

        cols: 4

        
        #######
        #fila 1
        #######
        
        Button:
            text: "7"
            font_size: 20
            bold: True
            on_press: root.agregar_caracter("7")
            
            
            #color branco y fuente negra
            background_color: 3,3,3,1
            color: 0,0,0,1

        
        Button:
            text: "8"
            font_size: 20
            bold: True
            on_press: root.agregar_caracter("8")
            
                        
