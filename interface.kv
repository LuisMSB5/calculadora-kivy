<Contenedor>:
    # ✅ ESSENCIAL: cols define que es un GridLayout
    cols: 4
    spacing: 8
    padding: 8    
    
    ###########################
    # PRIMERO: Pantalla (ocupa 4 columnas)
    ###########################
    TextInput:
        id: pantalla
        text: "0"
        rowspan: 4  # ✅ Ocupa toda la fila
        font_size: '32sp'
        halign: 'right'
        readonly: True
        background_color: 0.1, 0.1, 0.1, 1
        foreground_color: 1, 1, 1, 1
        multiline: False
    
    ###########################
    # SEGUNDO: Botones normales
    ###########################
    
    # Fila 1
    Button:
        text: "7"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "8"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "9"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "C"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    # Fila 2
    Button:
        text: "4"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "5"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "6"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "+"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    

    # Fila 3
    Button:
        text: "1"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "2"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "3"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "-"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    # Fila 4
    Button:
        text: "."
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "0"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "/"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    Button:
        text: "*"
        font_size: '24sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    ###########################
    # TERCERO: Botones grandes (última fila)
    ###########################
    
    # ✅ RESET ocupa 2 columnas
    Button:
        id: button_reset
        text: "RESET"
        colspan: 2  # ✅ COLSPAN FUNCIONANDO
        font_size: '22sp'
        background_color: 3, 3, 3, 1
        color: 0, 0, 0, 1
    
    # ✅ = ocupa 2 columnas  
    Button:
        id: button_enter
        text: "="
        colspan: 2  # ✅ COLSPAN FUNCIONANDO
        font_size: '32sp'
        background_color: 204, 0, 0, 1
        color: 1, 1, 1, 1
